content-type: application/json

{
  "title": "The Name of the Wind",
  "author": "Patrick Rothfuss",
  "isbn": "9780756404741",
  "publishYear": 2007,
  "genre": "Fantasy",
  "pages": 662,
  "price": 19.99,
  "publisher": "DAW Books"
